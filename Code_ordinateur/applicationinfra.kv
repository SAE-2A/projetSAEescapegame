#:import NoTransition kivy.uix.screenmanager.NoTransition

WindowManager:
    FirstWindow: 
    SecondWindow:
    ThirdWindow:
    ForthWindow:
    FifthWindow:
    FinalWindow:

<FirstWindow>
    name: "first_enigme"
    FloatLayout:
        size:root.width, root.height
        canvas.before:
            Color:
                rgba:1,1,1,1
            Rectangle:
                pos:self.pos
                size:self.size

        spacing:1

        Label:
            color:192,192,192,1
            text:"Question 1"
            font_size:40
            size_hint_x:1
            size_hint_y:.3
            pos_hint:{"x":0.0,"y":0.7}
        
        Label:
            color:192,192,192,1
            text:"Comment on appelle le type de message \n qui a pour destination 255.255.255.255 ? "
            font_size:25
            size_hint_x:1
            size_hint_y:.3
            pos_hint:{"x":0.0,"y":0.5}

          
        Label:  
            color:192,192,192,1
            text:"1) Multicast"
            font_size:36
            size_hint_x:1
            size_hint_y:.3
            pos_hint:{"x":-.3,"y":0.35}  

        Label:  
            color:192,192,192,1
            text:"3) Unicast"
            font_size:36
            size_hint_x:1
            size_hint_y:.3
            pos_hint:{"x":-.3,"y":0.15}   
        
        Label:  
            color:192,192,192,1
            text:"2) Broadcast"
            font_size:36
            size_hint_x:1
            size_hint_y:.3
            pos_hint:{"x":0.3,"y":0.35}  

        Label:  
            color:192,192,192,1
            text:"4) Cela n'existe pas"
            font_size:36
            size_hint_x:1
            size_hint_y:.3
            pos_hint:{"x":0.3,"y":0.15}   
        Label:
            id : error
            color: 1,0,0,1
            text: ""
            font_size:36
            size_hint_x:1
            size_hint_y:.3
            pos_hint:{"x":0.5-(self.size_hint_x/2),"y":-0.08}  

        Button : 
            id : reponse_un
            text : "Réponse"    
            font_size : 28
            background_color : (0,0,0,0.5)
            size_hint : (None,None)
            pos_hint: {"x": 0.38, "y": .1}
            width : 200
            height : 50
            on_release : 
                app.root.current = app.first_answer()
                root.manager.transition = NoTransition()
                

